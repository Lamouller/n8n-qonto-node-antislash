{
  "compilerOptions": {
    "lib": ["ES2017", "ES2019"], // Gardez les bibliothèques souhaitées
    "module": "commonjs",
    "target": "ES2019",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"], // Important pour inclure les types Node.js
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "credentials/**/*",
    "nodes/**/*",
    "nodes/**/*.json",
    "package.json"
  ],
  "exclude": [
    "node_modules", // Exclut les dépendances installées
    "dist" // Exclut le répertoire de sortie
  ]
}
